{{#if success_message}}
<div>{{success_message}}</div>
{{/if}}
{{#if error_message}}
<div>{{error_message}}</div>
{{/if}}
<a href="./todos/new">Create</a>
<ul>
  {{#each todos}}
    <li>
      <input type="checkbox" disabled {{#if this.is_complete}} checked {{/if}}>
      {{this.name}}
      <a href="/todos/{{ this.id }}">detail</a>
      <a href="/todos/{{this.id}}/edit">edit</a>
      <form action="/todos/{{this.id}}?_method=DELETE" method="POST" style="display: inline;">
        <button type="submit">delete</button>
      </form>
    </li>
  {{/each}}
</ul>